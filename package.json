{
  "author": "Evan Tahler <evan@delicioushat.com>",
  "name": "actionhero-chat",
  "license": "Apache-2.0",
  "description": "An example actionhero application using sequelzie and next.js",
  "version": "0.1.0",
  "engines": {
    "node": ">=12.0.0"
  },
  "scripts": {
    "prepare": "npm run prepare-api && npm run prepare-web",
    "prepare-api": "cd api && rm -rf dist && tsc --declaration",
    "prepare-web": "cd web && next build",
    "start": "cd api && node ./dist/server.js",
    "dev": "cd api && ts-node-dev --transpile-only --ignore-watch=\"../web\" --no-deps --notify=false ./src/server.ts",
    "test": "npm run test-api && npm run test-web",
    "pretest": "npm run lint && npm run prepare",
    "test-api": "cd api && jest --maxWorkers 5",
    "test-web": "cd web && jest --maxWorkers 5",
    "lint": "npm run lint-api && npm run lint-web",
    "lint-api": "cd api && prettier --check src __tests__",
    "lint-web": "cd web && prettier --check pages hooks client components __tests__"
  },
  "dependencies": {
    "actionhero": "^23.0.10",
    "ah-next-plugin": "^0.3.0",
    "ah-sequelize-plugin": "^2.2.3",
    "axios": "^0.20.0",
    "bcrypt": "^5.0.0",
    "ioredis": "^4.17.3",
    "next": "^9.5.3",
    "pg": "^8.3.3",
    "pg-hstore": "^2.3.3",
    "raw-loader": "^4.0.1",
    "react": "^16.13.1",
    "react-bootstrap": "^1.3.0",
    "react-dom": "^16.13.1",
    "react-hook-form": "^6.8.3",
    "react-markdown": "^4.3.1",
    "reflect-metadata": "^0.1.13",
    "sequelize": "^5.22.3",
    "sequelize-typescript": "^1.1.0",
    "swagger-ui": "^3.34.0",
    "winston": "^3.3.3",
    "ws": "^7.3.1"
  },
  "devDependencies": {
    "@types/bluebird": "^3.5.32",
    "@types/faker": "^5.1.2",
    "@types/jest": "^26.0.14",
    "@types/node": "^14.11.2",
    "@types/react-dom": "^16.9.8",
    "@types/validator": "^13.1.0",
    "enzyme": "^3.11.0",
    "enzyme-adapter-react-16": "^1.15.4",
    "jest": "26.4.2",
    "jest-environment-webdriver": "^0.2.0",
    "prettier": "^2.1.1",
    "ts-jest": "^26.4.0",
    "ts-node-dev": "latest",
    "typescript": "^4.0.3"
  }
}
