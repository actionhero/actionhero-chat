{
  "author": "Evan Tahler <evan@delicioushat.com>",
  "name": "actionhero-chat",
  "license": "Apache-2.0",
  "description": "An example actionhero application using sequelzie and next.js",
  "version": "0.1.0",
  "engines": {
    "node": ">=12.0.0"
  },
  "scripts": {
    "build": "yarn build-api && yarn build-web",
    "build-api": "cd api && rm -rf dist && tsc --declaration",
    "build-web": "cd web && next build",
    "start": "cd api && actionhero start",
    "dev": "cd api && ts-node-dev --transpile-only --ignore-watch=\"../web\" --no-deps --notify=false ./../node_modules/.bin/actionhero start",
    "test": "yarn test-api && yarn test-web",
    "pretest": "yarn lint && yarn build",
    "test-api": "cd api && jest --maxWorkers 5",
    "test-web": "cd web && jest",
    "lint": "yarn lint-api && yarn lint-web",
    "lint-api": "cd api && prettier --check src/**/*.ts __tests__/**/*.ts",
    "lint-web": "cd web && prettier --check pages/**/*.tsx components/**/*.tsx classes/**/*.ts repositories/**/*.ts __tests__/**/*.tsx"
  },
  "dependencies": {
    "actionhero": "^21.0.8",
    "ah-sequelize-plugin": "^2.0.1",
    "axios": "^0.19.0",
    "bcrypt": "^3.0.6",
    "ioredis": "^4.14.0",
    "next": "^9.1.6",
    "pg": "^7.12.1",
    "pg-hstore": "^2.3.3",
    "raw-loader": "^4.0.0",
    "react": "^16.12.0",
    "react-bootstrap": "^1.0.0-beta.16",
    "react-dom": "^16.12.0",
    "react-markdown": "^4.2.2",
    "reflect-metadata": "^0.1.13",
    "sequelize": "^5.19.2",
    "sequelize-typescript": "^1.0.0",
    "winston": "^3.2.1",
    "ws": "^7.1.2"
  },
  "devDependencies": {
    "@types/bluebird": "^3.5.29",
    "@types/faker": "^4.1.7",
    "@types/jest": "^24.0.24",
    "@types/node": "^12.12.8",
    "@types/react-dom": "^16.9.4",
    "@types/validator": "^12.0.0",
    "enzyme": "^3.10.0",
    "enzyme-adapter-react-16": "^1.14.0",
    "jest": "24.9.0",
    "prettier": "^1.19.1",
    "ts-jest": "^24.2.0",
    "ts-node-dev": "latest",
    "typescript": "^3.7.2"
  }
}
