{
  "author": "Evan Tahler <evan@delicioushat.com>",
  "name": "actionhero-chat",
  "license": "Apache-2.0",
  "description": "An example actionhero application using sequelzie and next.js",
  "version": "0.1.0",
  "engines": {
    "node": ">=12.0.0 <15.0.0"
  },
  "scripts": {
    "build": "npm run build-api && npm run build-web",
    "build-api": "cd api && rm -rf dist && tsc --declaration",
    "build-web": "cd web && next build",
    "start": "cd api && node ./dist/server.js",
    "dev": "cd api && ts-node-dev --ignore-watch ../web ./src/server.ts",
    "test": "npm run test-api && npm run test-web",
    "pretest": "npm run lint && npm run build",
    "test-api": "cd api && jest --maxWorkers 5",
    "test-web": "cd web && jest --maxWorkers 5",
    "lint": "npm run lint-api && npm run lint-web",
    "lint-api": "cd api && prettier --check src __tests__",
    "lint-web": "cd web && prettier --check pages hooks client components __tests__",
    "nuke": "rm -rf node_modules && rm -rf api/dist && rm -rf web/.next"
  },
  "dependencies": {
    "actionhero": "^25.0.4",
    "ah-next-plugin": "^0.4.1",
    "ah-sequelize-plugin": "^3.0.1",
    "axios": "^0.21.1",
    "bcrypt": "^5.0.0",
    "ioredis": "^4.19.4",
    "next": "10.0.6",
    "pg": "^8.5.1",
    "pg-hstore": "^2.3.3",
    "raw-loader": "^4.0.2",
    "react": "^16.14.0",
    "react-bootstrap": "^1.4.3",
    "react-dom": "^16.14.0",
    "react-hook-form": "^6.14.2",
    "react-markdown": "^5.0.3",
    "reflect-metadata": "^0.1.13",
    "sequelize": "^6.4.0",
    "sequelize-typescript": "^2.0.0",
    "swagger-ui": "^3.40.0",
    "winston": "^3.3.3",
    "ws": "^7.4.2"
  },
  "devDependencies": {
    "@types/bluebird": "^3.5.33",
    "@types/faker": "^5.1.5",
    "@types/jest": "^26.0.20",
    "@types/node": "^14.14.21",
    "@types/react-dom": "^17.0.0",
    "@types/validator": "^13.1.3",
    "enzyme": "^3.11.0",
    "enzyme-adapter-react-16": "^1.15.5",
    "jest": "26.6.3",
    "jest-environment-webdriver": "^0.2.0",
    "prettier": "^2.2.1",
    "ts-jest": "^26.4.4",
    "ts-node-dev": "1.1.1",
    "typescript": "^4.1.3"
  }
}
