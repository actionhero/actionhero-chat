{
  "author": "Evan Tahler <evan@delicioushat.com>",
  "name": "actionhero-chat",
  "license": "Apache-2.0",
  "description": "An example actionhero application using sequelzie and next.js",
  "version": "0.1.0",
  "engines": {
    "node": ">=12.0.0"
  },
  "scripts": {
    "build": "yarn build-api && yarn build-web",
    "build-api": "cd api && rm -rf dist && tsc --declaration",
    "build-web": "cd web && next build",
    "start": "cd api && actionhero start",
    "dev": "cd api && ts-node-dev --transpile-only --ignore-watch=\"../web\" --no-deps --notify=false ./../node_modules/.bin/actionhero start",
    "test": "yarn test-api && yarn test-web",
    "pretest": "yarn lint && yarn build",
    "test-api": "cd api && jest --maxWorkers 5",
    "test-web": "cd web && jest --maxWorkers 5",
    "lint": "yarn lint-api && yarn lint-web",
    "lint-api": "cd api && prettier --check src __tests__",
    "lint-web": "cd web && prettier --check pages hooks client components __tests__"
  },
  "dependencies": {
    "actionhero": "^22.0.6",
    "ah-next-plugin": "^0.2.0",
    "ah-sequelize-plugin": "^2.0.3",
    "axios": "^0.19.2",
    "bcrypt": "^4.0.1",
    "ioredis": "^4.16.0",
    "next": "^9.3.2",
    "pg": "^7.18.2",
    "pg-hstore": "^2.3.3",
    "raw-loader": "^4.0.0",
    "react": "^16.13.1",
    "react-bootstrap": "^1.0.0-beta.17",
    "react-dom": "^16.13.1",
    "react-hook-form": "^5.1.3",
    "react-markdown": "^4.3.1",
    "reflect-metadata": "^0.1.13",
    "sequelize": "^5.21.5",
    "sequelize-typescript": "^1.1.0",
    "winston": "^3.2.1",
    "ws": "^7.2.3"
  },
  "devDependencies": {
    "@types/bluebird": "^3.5.30",
    "@types/faker": "^4.1.10",
    "@types/jest": "^25.1.4",
    "@types/node": "^13.9.3",
    "@types/react-dom": "^16.9.5",
    "@types/validator": "^12.0.1",
    "enzyme": "^3.11.0",
    "enzyme-adapter-react-16": "^1.15.2",
    "jest": "25.1.0",
    "jest-environment-webdriver": "^0.2.0",
    "prettier": "^2.0.1",
    "ts-jest": "^25.2.1",
    "ts-node-dev": "latest",
    "typescript": "^3.8.3"
  }
}
