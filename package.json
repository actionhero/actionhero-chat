{
  "author": "Evan Tahler <evan@delicioushat.com>",
  "name": "actionhero-chat",
  "license": "Apache-2.0",
  "description": "An example actionhero application using sequelzie and next.js",
  "version": "0.1.0",
  "engines": {
    "node": "16.x.x"
  },
  "scripts": {
    "build": "npm run build-api && npm run build-web",
    "build-api": "cd api && rm -rf dist && tsc --declaration",
    "build-web": "cd web && next build",
    "start": "cd api && node ./dist/server.js",
    "dev": "cd api && ts-node-dev --ignore-watch ../web ./src/server.ts",
    "test": "npm run test-api && npm run test-web",
    "pretest": "npm run lint && npm run build",
    "test-api": "cd api && jest --runInBand",
    "test-web": "cd web && jest --runInBand",
    "lint": "npm run lint-api && npm run lint-web",
    "lint-api": "cd api && prettier --check src __tests__",
    "lint-web": "cd web && prettier --check pages hooks client components __tests__",
    "nuke": "rm -rf node_modules && rm -rf api/dist && rm -rf web/.next"
  },
  "dependencies": {
    "actionhero": "^27.1.4",
    "ah-next-plugin": "^0.5.5",
    "ah-sequelize-plugin": "^3.2.0",
    "axios": "^0.22.0",
    "bcrypt": "^5.0.1",
    "ioredis": "^4.27.9",
    "next": "11.1.2",
    "pg": "^8.7.1",
    "pg-hstore": "^2.3.4",
    "raw-loader": "^4.0.2",
    "react": "^17.0.2",
    "react-bootstrap": "^1.6.4",
    "react-dom": "^17.0.2",
    "react-hook-form": "^6.15.5",
    "react-markdown": "^5.0.3",
    "reflect-metadata": "^0.1.13",
    "sequelize": "6.6.2",
    "sequelize-typescript": "^2.1.0",
    "swagger-ui": "^3.52.5",
    "winston": "^3.3.3",
    "ws": "^8.2.3"
  },
  "devDependencies": {
    "@types/bluebird": "^3.5.36",
    "@types/faker": "^5.5.9",
    "@types/jest": "^27.0.2",
    "@types/node": "^16.11.6",
    "@types/react-dom": "^17.0.9",
    "@types/validator": "^13.6.6",
    "enzyme": "^3.11.0",
    "enzyme-adapter-react-16": "^1.15.6",
    "jest": "27.2.4",
    "jest-environment-webdriver": "grouparoo/jest-webdriver#jest-v27-webdriver",
    "prettier": "^2.4.1",
    "ts-jest": "^27.0.5",
    "ts-node-dev": "1.1.8",
    "typescript": "^4.4.3"
  }
}
